<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrgnzrMainPage"
        >

    <TextView
            android:text="Please enter user information:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clickCounter"
            android:padding="10dp" android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp"/>
    <ImageView
            android:layout_width="66dp"
            android:layout_height="53dp"
            android:src="@drawable/calendar"
            android:id="@+id/calendarImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier" app:barrierDirection="top"/>
    <Button
            android:text="Create Account"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreateAccount"
            app:layout_constraintBottom_toBottomOf="@+id/textureView"
            android:layout_marginBottom="40dp" app:layout_constraintEnd_toEndOf="@+id/textureView"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"/>
    <TextView
            android:text="Orgnzr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="364dp"
            android:layout_marginStart="364dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>
    <TextureView
            android:layout_width="335dp"
            android:layout_height="434dp" android:id="@+id/textureView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/name"
            app:layout_constraintStart_toStartOf="@+id/textureView" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="@+id/textureView"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:inputType="textEmailAddress"
            android:hint="Email address"
            android:ems="10"
            android:id="@+id/emailAddress"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/name"/>
    <EditText
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:inputType="text"
            android:hint="Username"
            android:ems="10"
            android:id="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/emailAddress"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/emailAddress"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/userPassword"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/username"
    />

</androidx.constraintlayout.widget.ConstraintLayout>